CREATE TABLE Team (
  TeamID INT NOT NULL AUTO_INCREMENT,
  TeamName VARCHAR(40) NOT NULL,
  TeamSide VARCHAR(40) NOT NULL,
  PRIMARY KEY (TeamID)
);

CREATE TABLE Heroes (
  ID INT NOT NULL AUTO_INCREMENT,
  Name VARCHAR(40) NOT NULL,
  Alter_ego VARCHAR(40) NOT NULL,
  Location VARCHAR(40) NOT NULL,
  Occupation VARCHAR(40) NOT NULL,
  fk_TeamID INT,
  PRIMARY KEY (ID),
  FOREIGN KEY (fk_TeamID) REFERENCES Team(TeamID)
);

CREATE TABLE Villain (
  ID INT NOT NULL AUTO_INCREMENT,
  Name VARCHAR(40) NOT NULL,
  Alter_ego VARCHAR(40) NOT NULL,
  Location VARCHAR(40) NOT NULL,
  Occupation VARCHAR(40) NOT NULL,
  fk_TeamID INT,
  PRIMARY KEY (ID),
  FOREIGN KEY (fk_TeamID) REFERENCES Team(TeamID)
);

CREATE TABLE Nemesis (
  Nemesis_ID INT NOT NULL AUTO_INCREMENT,
  fk_Hero_ID INT NOT NULL,
  fk_Villain_ID INT NOT NULL,
  PRIMARY KEY (Nemesis_ID),
  FOREIGN KEY (fk_Hero_ID) REFERENCES Heroes(ID),
  FOREIGN KEY (fk_Villain_ID) REFERENCES Villain(ID)
);
